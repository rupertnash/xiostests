<?xml version="1.0"?>
<simulation>

  <context id="earth">
    <calendar type="Gregorian" start_date="2012-03-01 15:00:00" time_origin="2012-02-28 15:00:00 + 1d" />
    
    <axis_definition>
      <axis id="axis_A"/>
    </axis_definition>
    
    <domain_definition>
      <domain id="domain_A" />
    </domain_definition>
    
    <grid_definition>
      <grid id="grid_A">
	<domain domain_ref="domain_A" />
	<axis axis_ref="axis_A" />
      </grid>
            
    </grid_definition>

    <field_definition level="1">
      <field id="field_A"  operation="average" freq_op="3600s" grid_ref="grid_A"/>
    </field_definition>

    
    <file_definition type="multiple_file" par_access="collective" output_freq="6h" output_level="10">
      <file id="output" name="earth">
	<field field_ref="field_A"/>
      </file>
    </file_definition>

  </context>

  <context id="xios">
    <variable_definition>
      <variable_group id="buffer">
        <variable id="optimal_buffer_size" type="string">performance</variable>
        <variable id="buffer_size_factor" type="double">1.0</variable>
      </variable_group>

      <variable_group id="parameters" >
        <variable id="using_server" type="bool">false</variable>
        <variable id="info_level" type="int">50</variable>
        <variable id="print_file" type="bool">true</variable>
      </variable_group>
    </variable_definition>
  </context>


</simulation>

